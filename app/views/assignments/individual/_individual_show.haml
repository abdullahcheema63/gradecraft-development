= team_filter(presenter.teams) if presenter.has_teams? && presenter.individual_assignment?

- if presenter.assignment.grades.instructor_modified.any?
  .clear.right
    = simple_form_for presenter.assignment, :url => delete_all_assignment_grades_path(assignment_id: presenter.assignment.id), method: :delete do |f|
      = hidden_field_tag :team_id, presenter.team.id unless presenter.team.nil?
      .submit-buttons
        = active_course_submit_tag "Delete All Grades", class: "button button-slim", data: { confirm: "Are you sure you want to delete all grades for this assignment?" }

.progress
= form_tag release_assignment_grades_path(presenter.assignment), method: :put do
  %assignment-show-table{"data-assignment-id"=>"#{presenter.assignment.id}",
                         "data-assignment-type-id"=>"#{presenter.assignment_type.id}"}

  - if presenter.has_grades?
    .right
      %br
      = active_course_submit_tag "Release Selected Grades", class: "button disabled", disabled: true,
        data: { behavior: "selected-individual-grades-command", confirm: "Release Selected Grades to Students?" }

  .clear
