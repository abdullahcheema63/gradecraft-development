<%= yield %>

<% content_for :scripts do %>
  <script type="text/javascript">
    var thisUser = {
      id: '<%= @current_user.id %>',
      firstName: '<%= @current_user.first_name %>',
      lastName: '<%= @current_user.last_name %>',
      email: '<%= @current_user.email %>',
      admin: '<%= @current_user.admin %>',
      account_url: '<%= edit_profile_users_path %>'
    }
    store.dispatch("setCurrentUser", thisUser);
  </script>
<% end %>

<% if @current_user.license %>
  <% content_for :scripts do %>
    <script type="text/javascript">
      var userLicense = {
        maxCourses: <%= @current_user.license.max_courses %>,
        currentCourses: <%= @current_user.license.courses.length %>
      }
      store.dispatch("addUserLicenseInfo", userLicense)
    </script>
  <% end %>
<% end %>
