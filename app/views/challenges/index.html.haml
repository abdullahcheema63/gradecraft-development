- if current_user_is_staff?
  - content_for :context_menu do
    .context-menu
      %ul
        = active_course_link_to decorative_glyph(:plus) + "Add a New #{(term_for :challenge).titleize}", new_challenge_path, class: "button button-edit"

.pageContent
  = render partial: "layouts/alerts"

  - if current_user_is_staff?
    = render partial: "challenges/index_staff"
