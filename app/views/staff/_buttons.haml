- content_for :context_menu do
  .context-menu
    %ul
      - if @staff_member.present?
        = active_course_link_to glyph(:edit) + "Edit Staff Member", edit_user_path(@staff_member), class: "button button-edit"
      - elsif current_user_is_admin? || current_course.has_paid?
        = active_course_link_to decorative_glyph(:plus) + "Add a New Staff Member", new_user_path, class: "button button-edit"
