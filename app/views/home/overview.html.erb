<% if @current_user.license %>
  <% content_for :scripts do %>
    <script type="text/javascript">
      var userLicense = {
        maxCourses: <%= @current_user.license.max_courses %>,
        currentCourses: <%= @current_user.license.courses.length %>
      }
      store.dispatch("addUserLicenseInfo", userLicense)
    </script>
  <% end %>
<% end %>

<header-component data-component></header-component>

<div class='wrapper dashboard'>
  <guide-control data-component></guide-control>

  <% if @user_role != "admin"%>
    <overview-container data-component></overview-container>
  <% else %>
    <admin-container data-component></admin-container>
  <% end %>
</div>
