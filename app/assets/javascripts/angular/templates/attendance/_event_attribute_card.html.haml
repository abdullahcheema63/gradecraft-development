.event-card{"ng-class"=>"{'saved': saved()}"}
  .attendance-header
    %i.fa.fa-calendar
    %a{"ng-click"=>"editAssignment()"}
      {{event.open_at | date:"EEEE, MMMM d yyyy"}}, {{event.open_at | date:"h:ss a"}} - {{event.due_at | date:"h:ss a"}}

    %a.right{"ng-click"=>"deleteEvent()"}
      %i.fa.fa-times

  .form-flex-row
    .form-item.slim-margin
      %label
        %span.sr-only Title
        %input{"type"=>"text",
               "required"=>"",
               "placeholder"=>"Title (Required)",
               "ng-model"=>"event.name",
               "ng-change"=>"queuePostAttendanceEvent()"}

    %assignment-media-uploader{"assignment"=>"event",
                               "ng-if"=>"event.id",
                               "hide-attachments"=>"true",
                               "ng-cloak"=>""}

  .form-item.slim-margin
    %label
      %span.sr-only Class Description
      %textarea.event-description{"type"=>"text",
                                  "placeholder"=>"Class Description",
                                  "rows"=>"2",
                                  "ng-model"=>"event.description",
                                  "ng-change"=>"queuePostAttendanceEvent()"}

  .form-item.slim-margin
    %label{"ng-if"=>"event.full_points != null"}
      Total Points Possible:
      %input{"type"=>"text",
             "required"=>"",
             "ng-model"=>"event.full_points",
             "gc-number-input"=>"",
             "allow-negatives"=>"false",
             "placeholder"=>"Points",
             "ng-change"=>"queuePostAttendanceEvent()"}

  %status-message{"ng-if"=>"event.status",
                  "ng-class"=>"saveStatusClass()"} {{event.status.message}}
