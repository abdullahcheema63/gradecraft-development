%loading-message{"data-loading"=>"coursesOverviewCtrl.loading", "data-message"=>"Loading courses..."}

%label
  %span.sr-only Search Criteria
  %input.table-search-input{"type"=>"search",
                           "placeholder"=>"Search",
                           "ng-if"=>"coursesOverviewCtrl.hasCourses()",
                           "ng-model"=>"coursesOverviewCtrl.searchCriteria",
                           "ng-model-options"=>"{ updateOn: 'change blur', getterSetter: true }"}

%div{"ng-if"=>"!coursesOverviewCtrl.loading"}
  %table.no-table-header
    %caption.sr-only Course Overview
    %thead
      %tr
        %th{"scope"=>"col"} Course No
        %th{"scope"=>"col"} Name
        %th{"scope"=>"col"} Instructor(s)
        %th{"scope"=>"col"} Semester
        %th{"scope"=>"col"} Year
        %th{"scope"=>"col"} Total Points
        %th{"scope"=>"col"} # of Students
        %th{"scope"=>"col"} Created
        %th{"scope"=>"col", "style"=>"text-align: right"} Downloads
        %th.options{"scope"=>"col"} Options

    %tbody.courses-overview-table-body
